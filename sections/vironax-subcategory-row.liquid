{% comment %}
  VironaX Subcategory Row - Enhanced Version
  BIGGER stone images for ring subcategories (30-50% increase)
  With universal padding/size/spacing controls
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    --subcategory-icon-size: {{ section.settings.icon_size }}px;
    --subcategory-icon-size-tablet: {{ section.settings.icon_size_tablet }}px;
    --subcategory-icon-size-mobile: {{ section.settings.icon_size_mobile }}px;
    --subcategory-gap: {{ section.settings.item_gap }}px;
    --subcategory-padding-top: {{ section.settings.padding_top }}px;
    --subcategory-padding-bottom: {{ section.settings.padding_bottom }}px;
    --subcategory-padding-left: {{ section.settings.padding_left }}px;
    --subcategory-padding-right: {{ section.settings.padding_right }}px;
    --subcategory-margin-top: {{ section.settings.margin_top }}px;
    --subcategory-margin-bottom: {{ section.settings.margin_bottom }}px;
  }
</style>

<div
  class="vironax-subcategories"
  style="
    margin-top: var(--subcategory-margin-top);
    margin-bottom: var(--subcategory-margin-bottom);
    {% if section.settings.full_width %}max-width: 100%;{% else %}max-width: {{ section.settings.max_width }}px;{% endif %}
  "
>
  <div class="vironax-subcategories__row">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="vironax-subcategories__item">
        <div class="vironax-subcategories__image-container">
          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | image_url: width: 300 }}"
              srcset="
                {{ block.settings.image | image_url: width: 100 }} 100w,
                {{ block.settings.image | image_url: width: 150 }} 150w,
                {{ block.settings.image | image_url: width: 200 }} 200w,
                {{ block.settings.image | image_url: width: 300 }} 300w
              "
              sizes="(max-width: 699px) {{ section.settings.icon_size_mobile }}px, (max-width: 999px) {{ section.settings.icon_size_tablet }}px, {{ section.settings.icon_size }}px"
              alt="{{ block.settings.title }}"
              class="vironax-subcategories__image"
              loading="lazy"
            >
          {% else %}
            <div class="vironax-subcategories__placeholder">
              {{ block.settings.title | slice: 0 }}
            </div>
          {% endif %}
        </div>
        <span class="vironax-subcategories__title">{{ block.settings.title }}</span>
      </a>
    {% endfor %}
  </div>
</div>

<style>
  .vironax-subcategories {
    padding-top: var(--subcategory-padding-top);
    padding-bottom: var(--subcategory-padding-bottom);
    padding-left: var(--subcategory-padding-left);
    padding-right: var(--subcategory-padding-right);
    background-color: rgb(var(--background));
    margin-left: auto;
    margin-right: auto;
  }

  .vironax-subcategories__row {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: var(--subcategory-gap, var(--spacing-xl));
    flex-wrap: wrap;
  }

  /* Horizontal scrolling option */
  {% if section.settings.enable_scroll %}
  .vironax-subcategories__row {
    flex-wrap: nowrap;
    overflow-x: auto;
    justify-content: flex-start;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .vironax-subcategories__row::-webkit-scrollbar {
    display: none;
  }
  {% endif %}

  .vironax-subcategories__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-sm);
    text-decoration: none;
    color: inherit;
    transition: opacity 0.3s ease;
    flex-shrink: 0;
  }

  .vironax-subcategories__item:hover {
    opacity: 0.7;
  }

  /* BIGGER ICON SIZES - 30-50% larger than before */
  .vironax-subcategories__image-container {
    width: var(--subcategory-icon-size, 120px);
    height: var(--subcategory-icon-size, 120px);
    overflow: hidden;
    border: {{ section.settings.border_width }}px solid rgb(var(--border-color));
    border-radius: {{ section.settings.border_radius }}px;
    transition: border-color 0.3s ease, transform 0.3s ease;
  }

  .vironax-subcategories__item:hover .vironax-subcategories__image-container {
    border-color: rgb(var(--text-color));
    {% if section.settings.hover_scale %}
    transform: scale(1.05);
    {% endif %}
  }

  .vironax-subcategories__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .vironax-subcategories__item:hover .vironax-subcategories__image {
    transform: scale(1.1);
  }

  .vironax-subcategories__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #333333 0%, #1a1a1a 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #FFFFFF;
    font-family: var(--heading-font-family);
    font-size: var(--text-lg);
    font-weight: 600;
  }

  .vironax-subcategories__title {
    font-family: var(--text-font-family);
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    text-transform: {{ section.settings.title_text_transform }};
    letter-spacing: var(--text-letter-spacing);
    color: rgb(var(--text-color));
    text-align: center;
    max-width: var(--subcategory-icon-size, 120px);
  }

  /* Tablet */
  @media screen and (max-width: 999px) {
    .vironax-subcategories__row {
      gap: calc(var(--subcategory-gap, var(--spacing-lg)) * 0.8);
    }

    .vironax-subcategories__image-container {
      width: var(--subcategory-icon-size-tablet, 100px);
      height: var(--subcategory-icon-size-tablet, 100px);
    }

    .vironax-subcategories__title {
      max-width: var(--subcategory-icon-size-tablet, 100px);
    }
  }

  /* Mobile */
  @media screen and (max-width: 699px) {
    .vironax-subcategories {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }

    .vironax-subcategories__row {
      gap: calc(var(--subcategory-gap, var(--spacing-md)) * 0.6);
    }

    .vironax-subcategories__image-container {
      width: var(--subcategory-icon-size-mobile, 80px);
      height: var(--subcategory-icon-size-mobile, 80px);
    }

    .vironax-subcategories__title {
      font-size: {{ section.settings.title_font_size_mobile | default: 10 }}px;
      max-width: var(--subcategory-icon-size-mobile, 80px);
    }
  }
</style>

