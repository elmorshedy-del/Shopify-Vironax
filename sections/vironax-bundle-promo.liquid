{% comment %}
  VironaX Bundle Promo
  Shop bundle promo banner - 20% OFF
  OTTASILVER-inspired styling
{% endcomment %}

<div class="vironax-bundle">
  <div class="vironax-bundle__container">
    <div class="vironax-bundle__content">
      <span class="vironax-bundle__label">{{ section.settings.label }}</span>
      <h2 class="vironax-bundle__headline">{{ section.settings.headline }}</h2>
      <p class="vironax-bundle__description">{{ section.settings.description }}</p>
      <a href="{{ section.settings.button_link }}" class="vironax-bundle__button">
        {{ section.settings.button_text }}
      </a>
    </div>
    
    <div class="vironax-bundle__image-container">
      {% if section.settings.image != blank %}
        <img 
          src="{{ section.settings.image | image_url: width: 800 }}" 
          alt="{{ section.settings.headline }}"
          class="vironax-bundle__image"
          loading="lazy"
        >
      {% else %}
        <div class="vironax-bundle__placeholder">
          <span>Add Bundle Image</span>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .vironax-bundle {
    padding: 0 var(--vironax-section-gutter);
    background-color: rgb(var(--background));
    max-width: var(--vironax-container-max-width);
    margin: 0 auto;
  }

  .vironax-bundle__container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    background-color: #F8F8F8;
    overflow: hidden;
  }

  .vironax-bundle__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: var(--spacing-3xl);
  }

  .vironax-bundle__label {
    font-family: var(--text-font-family);
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: var(--heading-letter-spacing);
    color: rgb(var(--text-color) / 0.6);
    margin-bottom: var(--spacing-sm);
  }

  .vironax-bundle__headline {
    font-family: var(--heading-font-family);
    font-size: var(--text-h1);
    font-weight: var(--heading-font-weight);
    text-transform: var(--heading-text-transform);
    letter-spacing: var(--heading-letter-spacing);
    color: rgb(var(--text-color));
    margin: 0 0 var(--spacing-lg) 0;
    line-height: 1.1;
  }

  .vironax-bundle__description {
    font-family: var(--text-font-family);
    font-size: var(--text-base);
    font-weight: 400;
    color: rgb(var(--text-color) / 0.8);
    line-height: 1.6;
    margin: 0 0 var(--spacing-lg) 0;
  }

  .vironax-bundle__button {
    display: inline-block;
    align-self: flex-start;
    font: var(--button-font);
    text-transform: var(--button-text-transform);
    letter-spacing: var(--button-letter-spacing);
    color: rgb(var(--button-text-color));
    background-color: rgb(var(--button-background));
    padding: var(--spacing-sm) var(--spacing-xl);
    text-decoration: none;
    transition: opacity 0.3s ease;
    border-radius: var(--button-border-radius);
  }

  .vironax-bundle__button:hover {
    opacity: 0.8;
  }

  .vironax-bundle__image-container {
    position: relative;
    overflow: hidden;
  }

  .vironax-bundle__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    min-height: 400px;
  }

  .vironax-bundle__placeholder {
    width: 100%;
    height: 100%;
    min-height: 400px;
    background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666666;
    font-family: var(--heading-font-family);
    font-size: var(--text-base);
    text-transform: uppercase;
    letter-spacing: var(--heading-letter-spacing);
  }

  @media screen and (max-width: 999px) {
    .vironax-bundle__container {
      grid-template-columns: 1fr;
    }

    .vironax-bundle__content {
      padding: var(--spacing-xl);
      order: 2;
    }

    .vironax-bundle__image-container {
      order: 1;
    }

    .vironax-bundle__image,
    .vironax-bundle__placeholder {
      min-height: 300px;
    }
  }

  @media screen and (max-width: 699px) {
    .vironax-bundle__content {
      padding: var(--spacing-lg) var(--spacing-md);
      text-align: center;
    }

    .vironax-bundle__button {
      align-self: center;
    }
  }
</style>

{% schema %}
{
  "name": "VironaX Bundle Promo",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "Shop Bundle"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Get 20% Off"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Bundle a ring with prayer beads and save. The perfect combination for the modern gentleman."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Bundles"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Bundle Image",
      "info": "Show ring + beads together"
    }
  ],
  "presets": [
    {
      "name": "VironaX Bundle Promo"
    }
  ]
}
{% endschema %}
