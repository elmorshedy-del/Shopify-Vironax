{% comment %}
  VironaX Bundle Promo - Enhanced Version
  Shop bundle promo banner - 20% OFF
  With universal padding/size/spacing controls
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    --bundle-padding-top: {{ section.settings.padding_top }}px;
    --bundle-padding-bottom: {{ section.settings.padding_bottom }}px;
    --bundle-padding-left: {{ section.settings.padding_left }}px;
    --bundle-padding-right: {{ section.settings.padding_right }}px;
    --bundle-margin-top: {{ section.settings.margin_top }}px;
    --bundle-margin-bottom: {{ section.settings.margin_bottom }}px;
    --bundle-max-width: {{ section.settings.max_width }}px;
    --bundle-content-padding: {{ section.settings.content_padding }}px;
    --bundle-bg-color: {{ section.settings.section_background_color }};
    --bundle-container-bg: {{ section.settings.container_background_color }};
    --bundle-text-color: {{ section.settings.text_color }};
    --bundle-button-bg: {{ section.settings.button_background_color }};
    --bundle-button-text: {{ section.settings.button_text_color }};
    --bundle-min-height: {{ section.settings.min_height }}px;
  }

  @media screen and (max-width: 999px) {
    #shopify-section-{{ section.id }} {
      --bundle-padding-top: {{ section.settings.padding_top_mobile }}px;
      --bundle-padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      --bundle-padding-left: {{ section.settings.padding_left_mobile }}px;
      --bundle-padding-right: {{ section.settings.padding_right_mobile }}px;
      --bundle-content-padding: {{ section.settings.content_padding_mobile }}px;
      --bundle-min-height: {{ section.settings.min_height_mobile }}px;
    }
  }
</style>

<div class="vironax-bundle" style="
  padding: var(--bundle-padding-top) var(--bundle-padding-right) var(--bundle-padding-bottom) var(--bundle-padding-left);
  margin-top: var(--bundle-margin-top);
  margin-bottom: var(--bundle-margin-bottom);
  max-width: var(--bundle-max-width);
  background-color: var(--bundle-bg-color);
">
  <div class="vironax-bundle__container" style="background-color: var(--bundle-container-bg);">
    <div class="vironax-bundle__content" style="
      padding: var(--bundle-content-padding);
      color: var(--bundle-text-color);
    ">
      {% if section.settings.label != blank %}
        <span class="vironax-bundle__label">{{ section.settings.label }}</span>
      {% endif %}
      <h2 class="vironax-bundle__headline" style="font-size: {{ section.settings.headline_size }}px;">
        {{ section.settings.headline }}
      </h2>
      {% if section.settings.description != blank %}
        <p class="vironax-bundle__description">{{ section.settings.description }}</p>
      {% endif %}
      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="vironax-bundle__button" style="
          background-color: var(--bundle-button-bg);
          color: var(--bundle-button-text);
          border-color: var(--bundle-button-bg);
        ">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>

    <div class="vironax-bundle__image-container">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: width: 800 }}"
          alt="{{ section.settings.headline }}"
          class="vironax-bundle__image"
          loading="lazy"
          style="min-height: var(--bundle-min-height); object-position: {{ section.settings.image_position }};"
        >
      {% else %}
        <div class="vironax-bundle__placeholder" style="min-height: var(--bundle-min-height);">
          <span>{{ section.settings.placeholder_text }}</span>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .vironax-bundle {
    margin-left: auto;
    margin-right: auto;
  }

  .vironax-bundle__container {
    display: grid;
    grid-template-columns: {{ section.settings.content_width }}% {{ section.settings.image_width }}%;
    overflow: hidden;
  }

  .vironax-bundle__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .vironax-bundle__label {
    font-family: var(--text-font-family);
    font-size: {{ section.settings.label_size }}px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.6;
    margin-bottom: 12px;
  }

  .vironax-bundle__headline {
    font-family: var(--heading-font-family);
    font-weight: var(--heading-font-weight);
    text-transform: var(--heading-text-transform);
    letter-spacing: var(--heading-letter-spacing);
    color: inherit;
    margin: 0 0 16px 0;
    line-height: 1.1;
  }

  .vironax-bundle__description {
    font-family: var(--text-font-family);
    font-size: {{ section.settings.description_size }}px;
    font-weight: 400;
    opacity: 0.8;
    line-height: 1.6;
    margin: 0 0 24px 0;
  }

  .vironax-bundle__button {
    display: inline-block;
    align-self: flex-start;
    font-family: var(--text-font-family);
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2px solid;
  }

  .vironax-bundle__button:hover {
    opacity: 0.8;
    transform: translateY(-2px);
  }

  .vironax-bundle__image-container {
    position: relative;
    overflow: hidden;
  }

  .vironax-bundle__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .vironax-bundle__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666666;
    font-family: var(--heading-font-family);
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  @media screen and (max-width: 999px) {
    .vironax-bundle__container {
      grid-template-columns: 1fr;
    }

    .vironax-bundle__content {
      order: 2;
    }

    .vironax-bundle__image-container {
      order: 1;
    }

    .vironax-bundle__headline {
      font-size: {{ section.settings.headline_size_mobile }}px !important;
    }
  }

  @media screen and (max-width: 699px) {
    .vironax-bundle__content {
      text-align: center;
    }

    .vironax-bundle__button {
      align-self: center;
    }
  }
</style>

