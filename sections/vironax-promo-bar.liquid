{% comment %}
  VironaX Promo Bar
  Scrolling announcement bar with multiple messages
  OTTASILVER-inspired styling
{% endcomment %}

<div class="vironax-promo-bar">
  <div class="vironax-promo-bar__track">
    {% for i in (1..3) %}
      <div class="vironax-promo-bar__content">
        <span class="vironax-promo-bar__item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
          {{ section.settings.message_1 }}
        </span>
        <span class="vironax-promo-bar__item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="1" y="3" width="15" height="13"/><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/>
          </svg>
          {{ section.settings.message_2 }}
        </span>
        <span class="vironax-promo-bar__item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/><line x1="1" y1="10" x2="23" y2="10"/>
          </svg>
          {{ section.settings.message_3 }}
        </span>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .vironax-promo-bar {
    background-color: rgb(var(--text-color));
    color: rgb(var(--background));
    overflow: hidden;
    padding: var(--spacing-sm) 0;
    position: relative;
  }

  .vironax-promo-bar__track {
    display: flex;
    animation: vironax-scroll 30s linear infinite;
    width: fit-content;
  }

  .vironax-promo-bar__content {
    display: flex;
    align-items: center;
    gap: var(--spacing-3xl);
    padding: 0 var(--spacing-lg);
    flex-shrink: 0;
  }

  .vironax-promo-bar__item {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    font-family: var(--text-font-family);
    font-size: var(--text-sm);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: var(--text-letter-spacing);
    white-space: nowrap;
  }

  .vironax-promo-bar__item svg {
    flex-shrink: 0;
  }

  @keyframes vironax-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-33.333%);
    }
  }

  .vironax-promo-bar:hover .vironax-promo-bar__track {
    animation-play-state: paused;
  }

  @media screen and (max-width: 699px) {
    .vironax-promo-bar__item {
      font-size: var(--text-xs);
    }

    .vironax-promo-bar__content {
      gap: var(--spacing-xl);
      padding: 0 var(--spacing-md);
    }
  }
</style>

{% schema %}
{
  "name": "VironaX Promo Bar",
  "settings": [
    {
      "type": "text",
      "id": "message_1",
      "label": "Message 1",
      "default": "Free Shipping Over 250 SAR"
    },
    {
      "type": "text",
      "id": "message_2",
      "label": "Message 2",
      "default": "3-4 Day Delivery to Saudi & GCC"
    },
    {
      "type": "text",
      "id": "message_3",
      "label": "Message 3",
      "default": "Pay in 4 with Tamara & Tabby"
    }
  ],
  "presets": [
    {
      "name": "VironaX Promo Bar"
    }
  ]
}
{% endschema %}
