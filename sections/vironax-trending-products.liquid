{% comment %}
  VironaX Trending Products - Enhanced Version
  Best sellers / trending products carousel
  With universal padding/size/spacing controls
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    --trending-padding-top: {{ section.settings.padding_top }}px;
    --trending-padding-bottom: {{ section.settings.padding_bottom }}px;
    --trending-padding-left: {{ section.settings.padding_left }}px;
    --trending-padding-right: {{ section.settings.padding_right }}px;
    --trending-margin-top: {{ section.settings.margin_top }}px;
    --trending-margin-bottom: {{ section.settings.margin_bottom }}px;
    --trending-max-width: {{ section.settings.max_width }}px;
    --trending-item-gap: {{ section.settings.item_gap }}px;
    --trending-product-width: {{ section.settings.product_width }}px;
    --trending-bg-color: {{ section.settings.background_color }};
    --trending-text-color: {{ section.settings.text_color }};
  }

  @media screen and (max-width: 999px) {
    #shopify-section-{{ section.id }} {
      --trending-padding-top: {{ section.settings.padding_top_mobile }}px;
      --trending-padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      --trending-padding-left: {{ section.settings.padding_left_mobile }}px;
      --trending-padding-right: {{ section.settings.padding_right_mobile }}px;
      --trending-product-width: {{ section.settings.product_width_tablet }}px;
    }
  }

  @media screen and (max-width: 699px) {
    #shopify-section-{{ section.id }} {
      --trending-product-width: {{ section.settings.product_width_mobile }}px;
    }
  }
</style>

<div class="vironax-trending" style="
  padding: var(--trending-padding-top) var(--trending-padding-right) var(--trending-padding-bottom) var(--trending-padding-left);
  margin-top: var(--trending-margin-top);
  margin-bottom: var(--trending-margin-bottom);
  max-width: var(--trending-max-width);
  background-color: var(--trending-bg-color);
  color: var(--trending-text-color);
">
  <div class="vironax-trending__header">
    <h2 class="vironax-trending__title">{{ section.settings.title }}</h2>
    {% if section.settings.view_all_link != blank %}
      <a href="{{ section.settings.view_all_link }}" class="vironax-trending__view-all">
        {{ section.settings.view_all_text }}
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    {% endif %}
  </div>

  <div class="vironax-trending__carousel-container">
    <button class="vironax-trending__nav vironax-trending__nav--prev" aria-label="Previous">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M15 18l-6-6 6-6"/>
      </svg>
    </button>

    <div class="vironax-trending__carousel">
      <div class="vironax-trending__track">
        {% for product in collections[section.settings.collection].products limit: section.settings.products_limit %}
          <div class="vironax-trending__product">
            <a href="{{ product.url }}" class="vironax-trending__product-link">
              <div class="vironax-trending__image-container">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 400 }}"
                    alt="{{ product.title }}"
                    class="vironax-trending__product-image"
                    loading="lazy"
                  >
                  {% if product.images[1] %}
                    <img
                      src="{{ product.images[1] | image_url: width: 400 }}"
                      alt="{{ product.title }}"
                      class="vironax-trending__product-image vironax-trending__product-image--hover"
                      loading="lazy"
                    >
                  {% endif %}
                {% else %}
                  <div class="vironax-trending__placeholder">
                    {{ product.title | slice: 0 }}
                  </div>
                {% endif %}

                {% if product.available == false %}
                  <span class="vironax-trending__badge vironax-trending__badge--soldout">{{ section.settings.sold_out_text }}</span>
                {% elsif product.compare_at_price > product.price %}
                  <span class="vironax-trending__badge vironax-trending__badge--sale">{{ section.settings.sale_text }}</span>
                {% elsif product.tags contains 'bestseller' or product.tags contains 'best-seller' %}
                  <span class="vironax-trending__badge vironax-trending__badge--bestseller">{{ section.settings.bestseller_text }}</span>
                {% elsif product.tags contains 'new' %}
                  <span class="vironax-trending__badge vironax-trending__badge--new">{{ section.settings.new_text }}</span>
                {% endif %}
              </div>

              <div class="vironax-trending__product-info">
                <h3 class="vironax-trending__product-title">{{ product.title }}</h3>

                {% if section.settings.show_rating %}
                  <div class="vironax-trending__product-rating">
                    {% for i in (1..5) %}
                      <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                      </svg>
                    {% endfor %}
                  </div>
                {% endif %}

                <div class="vironax-trending__product-price">
                  {% if product.compare_at_price > product.price %}
                    <span class="vironax-trending__price--compare">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                  <span class="vironax-trending__price--current">{{ product.price | money }}</span>
                </div>
              </div>
            </a>
          </div>
        {% else %}
          {% for i in (1..6) %}
            <div class="vironax-trending__product">
              <div class="vironax-trending__product-link">
                <div class="vironax-trending__image-container">
                  <div class="vironax-trending__placeholder">{{ i }}</div>
                  <span class="vironax-trending__badge vironax-trending__badge--bestseller">Best Seller</span>
                </div>
                <div class="vironax-trending__product-info">
                  <h3 class="vironax-trending__product-title">Sample Ring {{ i }}</h3>
                  <div class="vironax-trending__product-rating">
                    {% for j in (1..5) %}
                      <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                      </svg>
                    {% endfor %}
                  </div>
                  <div class="vironax-trending__product-price">
                    <span class="vironax-trending__price--current">$99.00</span>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endfor %}
      </div>
    </div>

    <button class="vironax-trending__nav vironax-trending__nav--next" aria-label="Next">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M9 18l6-6-6-6"/>
      </svg>
    </button>
  </div>
</div>

<style>
  .vironax-trending {
    margin-left: auto;
    margin-right: auto;
  }

  .vironax-trending__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
  }

  .vironax-trending__title {
    font-family: var(--heading-font-family);
    font-size: {{ section.settings.title_size }}px;
    font-weight: var(--heading-font-weight);
    text-transform: var(--heading-text-transform);
    letter-spacing: var(--heading-letter-spacing);
    color: inherit;
    margin: 0;
  }

  .vironax-trending__view-all {
    display: flex;
    align-items: center;
    gap: 6px;
    font-family: var(--text-font-family);
    font-size: 13px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: inherit;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .vironax-trending__view-all:hover {
    opacity: 0.6;
  }

  .vironax-trending__carousel-container {
    position: relative;
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .vironax-trending__carousel {
    overflow: hidden;
    flex: 1;
  }

  .vironax-trending__track {
    display: flex;
    gap: var(--trending-item-gap);
    transition: transform 0.5s ease;
  }

  .vironax-trending__nav {
    flex-shrink: 0;
    width: {{ section.settings.nav_button_size }}px;
    height: {{ section.settings.nav_button_size }}px;
    border: 2px solid currentColor;
    background: transparent;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    color: inherit;
  }

  .vironax-trending__nav:hover {
    background: var(--trending-text-color, #000000);
    color: var(--trending-bg-color, #FFFFFF);
  }

  .vironax-trending__nav svg {
    stroke: currentColor;
    transition: stroke 0.3s ease;
  }

  .vironax-trending__product {
    flex: 0 0 var(--trending-product-width);
    min-width: var(--trending-product-width);
  }

  .vironax-trending__product-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .vironax-trending__image-container {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    margin-bottom: 12px;
    background-color: #F5F5F5;
  }

  .vironax-trending__product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.4s ease;
  }

  .vironax-trending__product-image--hover {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }

  .vironax-trending__product-link:hover .vironax-trending__product-image--hover {
    opacity: 1;
  }

  .vironax-trending__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666666;
    font-family: var(--heading-font-family);
    font-size: 24px;
    font-weight: 600;
  }

  .vironax-trending__badge {
    position: absolute;
    top: 10px;
    left: 10px;
    padding: 4px 10px;
    font-family: var(--text-font-family);
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .vironax-trending__badge--bestseller,
  .vironax-trending__badge--new {
    background-color: #000000;
    color: #FFFFFF;
  }

  .vironax-trending__badge--sale {
    background-color: {{ section.settings.sale_badge_color }};
    color: #FFFFFF;
  }

  .vironax-trending__badge--soldout {
    background-color: #999999;
    color: #FFFFFF;
  }

  .vironax-trending__product-info {
    text-align: center;
  }

  .vironax-trending__product-title {
    font-family: var(--text-font-family);
    font-size: 14px;
    font-weight: 500;
    color: inherit;
    margin: 0 0 6px 0;
    line-height: 1.4;
  }

  .vironax-trending__product-rating {
    display: flex;
    justify-content: center;
    gap: 2px;
    margin-bottom: 6px;
    color: {{ section.settings.star_color }};
  }

  .vironax-trending__product-price {
    display: flex;
    justify-content: center;
    gap: 8px;
    align-items: center;
  }

  .vironax-trending__price--compare {
    font-family: var(--text-font-family);
    font-size: 13px;
    color: inherit;
    opacity: 0.5;
    text-decoration: line-through;
  }

  .vironax-trending__price--current {
    font-family: var(--text-font-family);
    font-size: 15px;
    font-weight: 600;
    color: inherit;
  }

  @media screen and (max-width: 999px) {
    .vironax-trending__nav {
      display: none;
    }

    .vironax-trending__carousel {
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
    }

    .vironax-trending__carousel::-webkit-scrollbar {
      display: none;
    }

    .vironax-trending__product {
      scroll-snap-align: start;
    }
  }

  @media screen and (max-width: 699px) {
    .vironax-trending__header {
      flex-direction: column;
      gap: 12px;
      text-align: center;
    }

    .vironax-trending__title {
      font-size: {{ section.settings.title_size_mobile }}px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const container = document.querySelector('#shopify-section-{{ section.id }} .vironax-trending__carousel');
    const track = document.querySelector('#shopify-section-{{ section.id }} .vironax-trending__track');
    const prevBtn = document.querySelector('#shopify-section-{{ section.id }} .vironax-trending__nav--prev');
    const nextBtn = document.querySelector('#shopify-section-{{ section.id }} .vironax-trending__nav--next');

    if (!container || !track || !prevBtn || !nextBtn) return;

    const scrollAmount = 300;

    prevBtn.addEventListener('click', function() {
      container.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    });

    nextBtn.addEventListener('click', function() {
      container.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    });
  });
</script>

