{% comment %}
  VironaX Trending Products
  Best sellers / trending products carousel
  OTTASILVER-inspired styling
{% endcomment %}

<div class="vironax-trending">
  <div class="vironax-trending__header">
    <h2 class="vironax-trending__title">{{ section.settings.title }}</h2>
    <a href="{{ section.settings.view_all_link }}" class="vironax-trending__view-all">
      View All
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </a>
  </div>
  
  <div class="vironax-trending__carousel-container">
    <button class="vironax-trending__nav vironax-trending__nav--prev" aria-label="Previous">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M15 18l-6-6 6-6"/>
      </svg>
    </button>
    
    <div class="vironax-trending__carousel">
      <div class="vironax-trending__track">
        {% for product in collections[section.settings.collection].products limit: section.settings.products_limit %}
          <div class="vironax-trending__product">
            <a href="{{ product.url }}" class="vironax-trending__product-link">
              <div class="vironax-trending__image-container">
                {% if product.featured_image %}
                  <img 
                    src="{{ product.featured_image | image_url: width: 400 }}" 
                    alt="{{ product.title }}"
                    class="vironax-trending__product-image"
                    loading="lazy"
                  >
                  {% if product.images[1] %}
                    <img 
                      src="{{ product.images[1] | image_url: width: 400 }}" 
                      alt="{{ product.title }}"
                      class="vironax-trending__product-image vironax-trending__product-image--hover"
                      loading="lazy"
                    >
                  {% endif %}
                {% else %}
                  <div class="vironax-trending__placeholder">
                    {{ product.title | slice: 0 }}
                  </div>
                {% endif %}
                
                {% if product.available == false %}
                  <span class="vironax-trending__badge vironax-trending__badge--soldout">Sold Out</span>
                {% elsif product.compare_at_price > product.price %}
                  <span class="vironax-trending__badge vironax-trending__badge--sale">Sale</span>
                {% elsif product.tags contains 'bestseller' or product.tags contains 'best-seller' %}
                  <span class="vironax-trending__badge vironax-trending__badge--bestseller">Best Seller</span>
                {% elsif product.tags contains 'new' %}
                  <span class="vironax-trending__badge vironax-trending__badge--new">New</span>
                {% endif %}
              </div>
              
              <div class="vironax-trending__product-info">
                <h3 class="vironax-trending__product-title">{{ product.title }}</h3>
                
                <div class="vironax-trending__product-rating">
                  {% for i in (1..5) %}
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
                      <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                    </svg>
                  {% endfor %}
                </div>
                
                <div class="vironax-trending__product-price">
                  {% if product.compare_at_price > product.price %}
                    <span class="vironax-trending__price--compare">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                  <span class="vironax-trending__price--current">{{ product.price | money }}</span>
                </div>
              </div>
            </a>
          </div>
        {% else %}
          {% for i in (1..6) %}
            <div class="vironax-trending__product">
              <div class="vironax-trending__product-link">
                <div class="vironax-trending__image-container">
                  <div class="vironax-trending__placeholder">{{ i }}</div>
                  <span class="vironax-trending__badge vironax-trending__badge--bestseller">Best Seller</span>
                </div>
                <div class="vironax-trending__product-info">
                  <h3 class="vironax-trending__product-title">Sample Ring {{ i }}</h3>
                  <div class="vironax-trending__product-rating">
                    {% for j in (1..5) %}
                      <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                      </svg>
                    {% endfor %}
                  </div>
                  <div class="vironax-trending__product-price">
                    <span class="vironax-trending__price--current">$99.00</span>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endfor %}
      </div>
    </div>
    
    <button class="vironax-trending__nav vironax-trending__nav--next" aria-label="Next">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M9 18l6-6-6-6"/>
      </svg>
    </button>
  </div>
</div>

<style>
  .vironax-trending {
    padding: var(--vironax-section-padding) var(--vironax-section-gutter);
    background-color: rgb(var(--background));
    max-width: var(--vironax-container-max-width);
    margin: 0 auto;
  }

  .vironax-trending__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--vironax-gap-lg);
  }

  .vironax-trending__title {
    font-family: var(--heading-font-family);
    font-size: var(--text-h5);
    font-weight: var(--heading-font-weight);
    text-transform: var(--heading-text-transform);
    letter-spacing: var(--heading-letter-spacing);
    color: rgb(var(--text-color));
    margin: 0;
  }

  .vironax-trending__view-all {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    font-family: var(--text-font-family);
    font-size: var(--text-sm);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: var(--text-letter-spacing);
    color: rgb(var(--text-color));
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .vironax-trending__view-all:hover {
    opacity: 0.6;
  }

  .vironax-trending__carousel-container {
    position: relative;
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .vironax-trending__carousel {
    overflow: hidden;
    flex: 1;
  }

  .vironax-trending__track {
    display: flex;
    gap: var(--spacing-md);
    transition: transform 0.5s ease;
  }

  .vironax-trending__nav {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    border: 2px solid rgb(var(--text-color));
    background: rgb(var(--background));
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .vironax-trending__nav:hover {
    background: rgb(var(--text-color));
    color: rgb(var(--background));
  }

  .vironax-trending__nav svg {
    stroke: rgb(var(--text-color));
    transition: stroke 0.3s ease;
  }

  .vironax-trending__nav:hover svg {
    stroke: rgb(var(--background));
  }

  .vironax-trending__product {
    flex: 0 0 calc(25% - 18px);
    min-width: 220px;
  }

  .vironax-trending__product-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .vironax-trending__image-container {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    margin-bottom: var(--spacing-sm);
    background-color: #F5F5F5;
  }

  .vironax-trending__product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.4s ease;
  }

  .vironax-trending__product-image--hover {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }

  .vironax-trending__product-link:hover .vironax-trending__product-image--hover {
    opacity: 1;
  }

  .vironax-trending__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666666;
    font-family: var(--heading-font-family);
    font-size: var(--text-xl);
    font-weight: 600;
  }

  .vironax-trending__badge {
    position: absolute;
    top: var(--spacing-sm);
    left: var(--spacing-sm);
    padding: var(--spacing-xs) var(--spacing-sm);
    font-family: var(--text-font-family);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--text-letter-spacing);
  }

  .vironax-trending__badge--bestseller {
    background-color: rgb(var(--text-color));
    color: rgb(var(--background));
  }

  .vironax-trending__badge--new {
    background-color: rgb(var(--text-color));
    color: rgb(var(--background));
  }

  .vironax-trending__badge--sale {
    background-color: rgb(var(--on-sale-badge-background));
    color: rgb(var(--on-sale-badge-text));
  }

  .vironax-trending__badge--soldout {
    background-color: rgb(var(--sold-out-badge-background));
    color: rgb(var(--sold-out-badge-text));
  }

  .vironax-trending__product-info {
    text-align: center;
  }

  .vironax-trending__product-title {
    font-family: var(--text-font-family);
    font-size: var(--text-sm);
    font-weight: 500;
    color: rgb(var(--text-color));
    margin: 0 0 var(--spacing-xs) 0;
    line-height: 1.4;
  }

  .vironax-trending__product-rating {
    display: flex;
    justify-content: center;
    gap: 2px;
    margin-bottom: var(--spacing-xs);
    color: rgb(var(--star-color));
  }

  .vironax-trending__product-price {
    display: flex;
    justify-content: center;
    gap: var(--spacing-xs);
    align-items: center;
  }

  .vironax-trending__price--compare {
    font-family: var(--text-font-family);
    font-size: var(--text-sm);
    color: rgb(var(--text-color) / 0.5);
    text-decoration: line-through;
  }

  .vironax-trending__price--current {
    font-family: var(--text-font-family);
    font-size: var(--text-base);
    font-weight: 600;
    color: rgb(var(--text-color));
  }

  @media screen and (max-width: 999px) {
    .vironax-trending__product {
      flex: 0 0 calc(33.333% - 16px);
      min-width: 180px;
    }

    .vironax-trending__nav {
      display: none;
    }

    .vironax-trending__carousel {
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
    }

    .vironax-trending__carousel::-webkit-scrollbar {
      display: none;
    }

    .vironax-trending__product {
      scroll-snap-align: start;
    }
  }

  @media screen and (max-width: 699px) {
    .vironax-trending__header {
      flex-direction: column;
      gap: var(--spacing-sm);
      text-align: center;
    }

    .vironax-trending__product {
      flex: 0 0 calc(50% - 12px);
      min-width: 150px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const container = document.querySelector('.vironax-trending__carousel');
    const track = document.querySelector('.vironax-trending__track');
    const prevBtn = document.querySelector('.vironax-trending__nav--prev');
    const nextBtn = document.querySelector('.vironax-trending__nav--next');
    
    if (!container || !track || !prevBtn || !nextBtn) return;
    
    const scrollAmount = 300;
    
    prevBtn.addEventListener('click', function() {
      container.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    });
    
    nextBtn.addEventListener('click', function() {
      container.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    });
  });
</script>

{% schema %}
{
  "name": "VironaX Trending Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Trending Now"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Number of Products",
      "min": 4,
      "max": 20,
      "step": 1,
      "default": 12
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View All Link"
    }
  ],
  "presets": [
    {
      "name": "VironaX Trending Products"
    }
  ]
}
{% endschema %}
