    },
    {
      "type": "image_picker",
      "id": "category_1_image",
      "label": "Category 1 Image"
    },
    {
      "type": "text",
      "id": "category_1_title",
      "label": "Category 1 Title",
      "default": "Rings"
    },
    {
      "type": "url",
      "id": "category_1_link",
      "label": "Category 1 Link"
    },
    {
      "type": "header",
      "content": "Category 2"
    },
    {
      "type": "image_picker",
      "id": "category_2_image",
      "label": "Category 2 Image"
    },
    {
      "type": "text",
      "id": "category_2_title",
