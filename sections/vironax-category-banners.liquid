{% comment %}
  VironaX Category Banners - Enhanced Version
  Large 50/50 category banners for Rings and Gemstone Beads
  With universal padding/size/spacing controls
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    --category-padding-top: {{ section.settings.padding_top }}px;
    --category-padding-bottom: {{ section.settings.padding_bottom }}px;
    --category-padding-left: {{ section.settings.padding_left }}px;
    --category-padding-right: {{ section.settings.padding_right }}px;
    --category-margin-top: {{ section.settings.margin_top }}px;
    --category-margin-bottom: {{ section.settings.margin_bottom }}px;
    --category-max-width: {{ section.settings.max_width }}px;
    --category-gap: {{ section.settings.gap }}px;
    --category-bg-color: {{ section.settings.background_color }};
    --category-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    --category-min-height: {{ section.settings.min_height }}px;
  }

  @media screen and (max-width: 999px) {
    #shopify-section-{{ section.id }} {
      --category-padding-top: {{ section.settings.padding_top_mobile }}px;
      --category-padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      --category-padding-left: {{ section.settings.padding_left_mobile }}px;
      --category-padding-right: {{ section.settings.padding_right_mobile }}px;
      --category-gap: {{ section.settings.gap_mobile }}px;
      --category-min-height: {{ section.settings.min_height_mobile }}px;
    }
  }
</style>

<div class="vironax-categories" style="
  padding: var(--category-padding-top) var(--category-padding-right) var(--category-padding-bottom) var(--category-padding-left);
  margin-top: var(--category-margin-top);
  margin-bottom: var(--category-margin-bottom);
  max-width: var(--category-max-width);
  background-color: var(--category-bg-color);
">
  <div class="vironax-categories__grid" style="gap: var(--category-gap);">
    <!-- Category 1 Banner -->
    <a href="{{ section.settings.category_1_link }}" class="vironax-categories__banner">
      <div class="vironax-categories__image-container" style="min-height: var(--category-min-height);">
        {% if section.settings.category_1_image != blank %}
          <img
            src="{{ section.settings.category_1_image | image_url: width: 1000 }}"
            alt="{{ section.settings.category_1_title }}"
            class="vironax-categories__image"
            loading="lazy"
            style="object-position: {{ section.settings.category_1_image_position }};"
          >
        {% else %}
          <div class="vironax-categories__placeholder">
            <span>{{ section.settings.placeholder_text }}</span>
          </div>
        {% endif %}
        <div class="vironax-categories__overlay" style="opacity: var(--category-overlay-opacity);"></div>
        <div class="vironax-categories__content">
          <h3 class="vironax-categories__title" style="font-size: {{ section.settings.title_size }}px;">
            {{ section.settings.category_1_title }}
          </h3>
          <span class="vironax-categories__cta">
            {{ section.settings.cta_text }}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </span>
        </div>
      </div>
    </a>

    <!-- Category 2 Banner -->
    <a href="{{ section.settings.category_2_link }}" class="vironax-categories__banner">
      <div class="vironax-categories__image-container" style="min-height: var(--category-min-height);">
        {% if section.settings.category_2_image != blank %}
          <img
            src="{{ section.settings.category_2_image | image_url: width: 1000 }}"
            alt="{{ section.settings.category_2_title }}"
            class="vironax-categories__image"
            loading="lazy"
            style="object-position: {{ section.settings.category_2_image_position }};"
          >
        {% else %}
          <div class="vironax-categories__placeholder">
            <span>{{ section.settings.placeholder_text }}</span>
          </div>
        {% endif %}
        <div class="vironax-categories__overlay" style="opacity: var(--category-overlay-opacity);"></div>
        <div class="vironax-categories__content">
          <h3 class="vironax-categories__title" style="font-size: {{ section.settings.title_size }}px;">
            {{ section.settings.category_2_title }}
          </h3>
          <span class="vironax-categories__cta">
            {{ section.settings.cta_text }}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </span>
        </div>
      </div>
    </a>
  </div>
</div>

<style>
  .vironax-categories {
    margin-left: auto;
    margin-right: auto;
  }

  .vironax-categories__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .vironax-categories__banner {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .vironax-categories__image-container {
    position: relative;
    aspect-ratio: {{ section.settings.aspect_ratio }};
    overflow: hidden;
  }

  .vironax-categories__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .vironax-categories__banner:hover .vironax-categories__image {
    transform: scale(1.05);
  }

  .vironax-categories__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666666;
    font-family: var(--heading-font-family);
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .vironax-categories__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.7) 0%,
      rgba(0, 0, 0, 0.3) 50%,
      rgba(0, 0, 0, 0) 100%
    );
    transition: opacity 0.4s ease;
  }

  .vironax-categories__banner:hover .vironax-categories__overlay {
    opacity: calc(var(--category-overlay-opacity) + 0.1) !important;
  }

  .vironax-categories__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: {{ section.settings.content_padding }}px;
    z-index: 2;
  }

  .vironax-categories__title {
    font-family: var(--heading-font-family);
    font-weight: var(--heading-font-weight);
    text-transform: var(--heading-text-transform);
    letter-spacing: var(--heading-letter-spacing);
    color: {{ section.settings.text_color }} !important;
    margin: 0 0 12px 0;
  }

  .vironax-categories__cta {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-family: var(--text-font-family);
    font-size: {{ section.settings.cta_size }}px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: {{ section.settings.text_color }};
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.4s ease;
  }

  .vironax-categories__banner:hover .vironax-categories__cta {
    opacity: 1;
    transform: translateY(0);
  }

  @media screen and (max-width: 699px) {
    .vironax-categories__grid {
      grid-template-columns: 1fr;
    }

    .vironax-categories__image-container {
      aspect-ratio: {{ section.settings.aspect_ratio_mobile }};
    }

    .vironax-categories__content {
      padding: {{ section.settings.content_padding_mobile }}px;
    }

    .vironax-categories__title {
      font-size: {{ section.settings.title_size_mobile }}px !important;
    }

    .vironax-categories__cta {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

